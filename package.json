{
  "name": "morph-ui",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "generate": "bun run scripts/generate-all.ts && bun run format",
    "generate:registry": "bun run scripts/generate-component-registry.ts",
    "generate:docs": "bun run scripts/generate-docs-registry.ts",
    "generate:exports": "bun run scripts/generate-barrel-exports.ts",
    "scaffold": "scaffdog generate component",
    "scaffold:component": "bun run scripts/scaffold-component.ts",
    "scaffold:mcp-server": "bun run scripts/scaffold-mcp-server.ts",
    "embed:skills": "tsx .claude/hooks/embed-skills.ts"
  },
  "devDependencies": {
    "@scaffdog/config": "^3.0.0",
    "@swc/core": "^1.15.7",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "prettier": "^3.7.4",
    "scaffdog": "^3.0.0",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "react": "19.1.0",
    "@types/react": "~19.1.0"
  },
  "dependencies": {
    "@langchain/community": "^1.1.11",
    "@langchain/core": "^1.1.19",
    "@langchain/openai": "^1.2.4",
    "dotenv": "^17.2.3",
    "faiss-node": "^0.5.1"
  },
  "trustedDependencies": [
    "faiss-node"
  ]
}
