{
  "name": "@repo/react-native-flows",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-screen user flow templates using morph-ui components",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    },
    "./auth/default": {
      "types": "./src/auth/(default)/index.ts",
      "default": "./src/auth/(default)/index.ts"
    },
    "./src/registry.json": "./src/registry.json"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "peerDependencies": {
    "@warp-ui/react-native": "workspace:*",
    "expo-router": "~6.0.21",
    "react": "^19.1.0",
    "react-native": "^0.76.6",
    "react-native-safe-area-context": "~5.6.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "~19.1.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.2"
  }
}
