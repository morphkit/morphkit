{
  "name": "@morphkit/react-native",
  "version": "0.1.1",
  "description": "Production-ready React Native component library with theming",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./src/docs-registry": "./src/docs-registry.ts",
    "./src/*": "./src/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morphkit/morphkit.git",
    "directory": "packages/react-native"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/registry.json",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/examples/**",
    "!src/**/*.mdx"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "peerDependencies": {
    "@expo/vector-icons": "^14.0.0",
    "expo-font": "~14.0.10",
    "react": "^19.1.0",
    "react-native": "^0.76.6",
    "react-native-safe-area-context": "~5.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@react-native/babel-preset": "^0.83.1",
    "@morphkit/eslint-config": "*",
    "@morphkit/typescript-config": "*",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.1.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.18.0",
    "jest": "^30.0.0",
    "jest-expo": "^52.0.0",
    "react-test-renderer": "^19.2.3",
    "typescript": "^5.9.2"
  }
}
