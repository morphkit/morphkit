{
  "name": "@warp-ui/nativewind",
  "version": "0.1.2",
  "description": "Nativewind-styled React Native component library",
  "private": false,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./src/registry.json": "./src/registry.json",
    "./src/docs-registry": "./src/docs-registry.ts",
    "./src/*": "./src/*"
  },
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint --max-warnings 0 src",
    "check-types": "tsc --noEmit",
    "generate-registry": "tsx scripts/generate-registry.ts && tsx scripts/generate-docs-registry.ts",
    "generate-theme": "tsx scripts/generate-theme.ts"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-native": "^0.81.0",
    "nativewind": "^4.1.27",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "eslint": "^9.25.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.5",
    "nativewind": "^4.1.27",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "~5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/warp-ui/warp-ui.git",
    "directory": "packages/nativewind"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  }
}
