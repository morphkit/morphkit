{
  "name": "@morphkit/cli",
  "version": "0.4.0",
  "description": "CLI for morphkit component library",
  "type": "module",
  "bin": {
    "morphkit": "./dist/cli.cjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --max-warnings 0 src",
    "check-types": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.1.0",
    "picocolors": "^1.1.0",
    "tar": "^7.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@morphkit/eslint-config": "*",
    "@morphkit/jest-config": "*",
    "@morphkit/typescript-config": "*",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.16.0",
    "@types/tar": "^6.1.13",
    "jest": "^29.7.0",
    "tsup": "^8.3.5",
    "typescript": "~5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morph-kit/morphkit.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "engines": {
    "node": ">=18"
  }
}
