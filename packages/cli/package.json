{
  "name": "@warp-ui/cli",
  "version": "0.2.0",
  "description": "CLI for warp-ui component library",
  "type": "module",
  "bin": {
    "warp-ui": "./dist/cli.cjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --max-warnings 0 src",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "@clack/prompts": "^0.7.0",
    "degit": "^2.8.4",
    "picocolors": "^1.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@repo/jest-config": "*",
    "@types/node": "^20.16.0",
    "tsup": "^8.3.5",
    "typescript": "~5.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/warp-ui/warp-ui.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "engines": {
    "node": ">=18"
  }
}
